
#
#config file for su55iw3 fastboot
#
#stroage
FILE_EXIST=$(shell if [ -f $(TOPDIR)/board/$(PLATFORM)/common.mk ]; then echo yes; else echo no; fi;)
EXT_FILE_EXIST=$(shell if [ -f $(TOPDIR)/board/$(PLATFORM)/common$(LICHEE_BOARD).mk ]; then echo yes; else echo no; fi;)
ifeq (x$(EXT_FILE_EXIST),xyes)
include $(TOPDIR)/board/$(PLATFORM)/common$(LICHEE_BOARD).mk
else ifeq (x$(FILE_EXIST),xyes)
include $(TOPDIR)/board/$(PLATFORM)/common.mk
else
include $(TOPDIR)/board/$(CP_BOARD)/common.mk
endif


MODULE=mmcfastboot
CFG_SUNXI_SDMMC =y
CFG_SUNXI_SDMMC_HS400=y
#only support 200M now
CFG_SUNXI_SDMMC_MAX_FREQ=200000000

#cache
CFG_USE_DCACHE =y

CFG_SUNXI_FDT=y

CFG_BOOT0_LOAD_KERNEL=y
CFG_KERNEL_BOOTIMAGE=y
CFG_KERNEL_CHECKSUM=n #y will check kernel checksum in bimage, but slower
CFG_MMC_KERNEL_OFFSET=0x400 # partition mbr size 512 * 1024 / 512 = 0x400 sector
CFG_MMC_LOGICAL_OFFSET=40960
CFG_KERNEL_LOAD_ADDR=0x4007f800
CFG_SUNXI_FDT_ADDR=0x41f00000
CFG_RESERVE_FDT_SIZE=0x30000
CFG_SUNXI_NO_UPDATE_FDT_CHOSEN=y
CFG_LOAD_DTB_FROM_KERNEL=y
CFG_SUNXI_SUPPORT_RAMDISK=y
CFG_RAMDISK_ADDR=0x43000000

#E906
CFG_RISCV_E906=y
CFG_SUNXI_ELF=y
CFG_MELISELF_LOAD_ADDR=0x5F000000

#IR STATE
#CFG_BOOT0_WRITE_IRSATTE_TO_ISP=y
CFG_SUNXI_PHY_KEY=n
CFG_GPADC_KEY=y

CFG_BOOT0_LOAD_FLASH=y
CFG_BOOT0_LOAD_ISPPARM=y
CFG_ISPPARAM_LOAD_ADDR=0x63400000
CFG_ISPPARAM_SIZE=0x40    #sector
CFG_MMC_ISPPARAM_OFFSET=13312 #sector

CFG_SET_GPIO_NEW=y

CFG_SUNXI_EFUSE =y

CFG_AXP2202_POWER=y
CFG_BOOT0_POWER_CAMERA=y
#set those macro to none
CFG_TCS4838_POWER=
CFG_SY8827G_POWER=
CFG_AXP1530_EXT_POWER=
CFG_AXP1530_POWER=

CFG_SUNXI_GPT=y
CFG_MMC_GPT_ARD=0 # 0 or 40960 sector
CFG_SUNXI_ENV=y
CFG_SUNXI_ENV_SIZE=0x1000 #linux should be the same with LICHEE_REDUNDANT_ENV_SIZE. rtos use 0x1000(4K)
CFG_SUNXI_HAVE_REDUNDENV=y
